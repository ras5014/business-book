<%- include('header'); -%>
<div class="container-fluid w-auto">
    <h1 style="text-align: center; color: white; background-color: black;">CUSTOMER INFORMATION</h1>
    <br>
    <button class="btn btn-danger float-end w-25 p-2" type="button" onclick="window.location.href='#'">Add New Customer</button>
    <br> <br> <p></p>
    <table id="customer_info_Table" class="table table-striped table-bordered table-hover table-responsive">
        <thead class="table-dark">
            <th>Customer Name</th>
            <th>Balance</th>
            <th>Shop Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>GSTIN</th>
            <th>City</th>
            <th>State</th>
            <th>Address</th>
            <th>Action</th>
        </thead>
        <tbody>
          <% table.forEach(function(data) { %> 
            <tr>
                <td><%= data.customer_name %></td>
                <td><%= data.balance %></td>
                <td><%= data.shop_name %></td>
                <td><%= data.phone %></td>
                <td><%= data.email %></td>
                <td><%= data.gstin %></td>
                <td><%= data.city %></td>
                <td><%= data.state %></td>
                <td><%= data.address %></td>
                <td>
                  <div class="d-inline-flex p-2 bd-highlight">
                    <button id="updateBtn" type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#updateModal" onclick="onEdit(this)">Update</button>
                  </div>
                </td>
            </tr>
          <% }); %>  
        </tbody>
    </table>
</div>

<div class="modal fade" id="updateModal" tabindex="-1" aria-labelledby="updateModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">UPDATE DATA</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
          <form action="/updateCustomerTable" method="post">
              <div class="mb-3">
                <label for="vendor_name" class="form-label">Customer Name</label>
                <input type="text" class="form-control" id="customer_name" name="customer_name" autocomplete="off" readonly/>
              </div>
              <div class="mb-3">
                  <label for="balance" class="form-label">Balance</label>
                  <input type="text" class="form-control" id="balance" name="balance" autocomplete="off" readonly/>
              </div>
              <div class="mb-3">
                <label for="vendor_name" class="form-label">Shop Name</label>
                <input type="text" class="form-control" id="shop_name" name="shop_name" autocomplete="off"/>
              </div>
              <div class="mb-3">
                <label for="vendor_name" class="form-label">Phone</label>
                <input type="text" class="form-control" id="phone" name="phone" autocomplete="off"/>
              </div>
              <div class="mb-3">
                <label for="vendor_name" class="form-label">Email</label>
                <input type="text" class="form-control" id="email" name="email" autocomplete="off"/>
              </div>
              <div class="mb-3">
                <label for="vendor_name" class="form-label">GSTIN</label>
                <input type="text" class="form-control" id="gstin" name="gstin" autocomplete="off"/>
              </div>
              <div class="mb-3">
                <label for="vendor_name" class="form-label">City</label>
                <input type="text" class="form-control" id="city" name="city" autocomplete="off"/>
              </div>
              <div class="mb-3">
                <label for="vendor_name" class="form-label">State</label>
                <input type="text" class="form-control" id="state" name="state" autocomplete="off"/>
              </div>
              <div class="mb-3">
                <label for="vendor_name" class="form-label">Address</label>
                <input type="text" class="form-control" id="address" name="address" autocomplete="off"/>
              </div>
               
              <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-primary">Save changes</button>
              </div> 
          </form>    
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="js/customer_info.js"></script>

<%- include('footer'); -%>