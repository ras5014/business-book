<%- include('header'); -%>
<div class="container-fluid w-auto">
    <h1 style="text-align: center; color: white; background-color: black;">EMPLOYEE INFORMATION</h1>
    <br>
    <button class="btn btn-danger float-end w-25 p-2" type="button" onclick="window.location.href='#'">Add New Employee</button>
    <br> <br> <p></p>
    <table id="employee_info_Table" class="table table-striped table-bordered table-hover table-responsive">
        <thead class="table-dark">
            <th>Employee Name</th>
            <th>Balance</th>
            <th>Phone</th>
            <th>Email</th>
            <th>City</th>
            <th>State</th>
            <th>Address</th>
            <th>Action</th>
        </thead>
        <tbody>
          <% table.forEach(function(data) { %> 
            <tr>
                <td><%= data.employee_name %></td>
                <td><%= data.balance %></td>
                <td><%= data.phone %></td>
                <td><%= data.email %></td>
                <td><%= data.city %></td>
                <td><%= data.state %></td>
                <td><%= data.address %></td>
                <td>
                  <div class="d-inline-flex p-2 bd-highlight">
                    <button id="updateBtn" type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#updateModal" onclick="onEdit(this)">Update</button>
                  </div>
                  <div class="d-inline-flex p-2 bd-highlight">
                    <button id="deleteBtn" type="button" class="btn btn-danger">Delete</button>
                  </div>
                </td>
            </tr>
          <% }); %>  
        </tbody>
    </table>
</div>

<%- include('footer'); -%>