<%- include('header'); -%>

<div class="container-sm clearfix mx-auto newItemForm">
    
    <form action="/addNew_Item" method="post">
        <div class="row d-flex justify-content-center">
          <label for="item" class="col-sm-2 col-form-label-lg">Item Name :</label>
          <div class="col-sm-6">
            <input type="text" class="form-control form-control-lg text-center" id="item" name="item" placeholder="Enter Item Name" autocomplete="off" required>
          </div>
        </div>
<br>
        <div class="row d-flex justify-content-center">
          <label for="qty_available" class="col-sm-2 col-form-label-lg">Qty Available :</label>
          <div class="col-sm-6">
            <input type="number" class="form-control form-control-lg text-center" id="qty_available" name="qty_available" placeholder="Enter Quantity Available" autocomplete="off" required>
          </div>
        </div>
<br>
        <div class="row d-flex justify-content-center">
            <label for="uom" class="col-sm-2 col-form-label-lg">UOM :</label>
            <div class="col-sm-6">
              <input type="text" class="form-control form-control-lg text-center" id="uom" name="uom" placeholder="Enter Unit of Mesurement" autocomplete="off" required>
            </div>
        </div>
<br>
        <div class="row d-flex justify-content-center">
            <label for="size" class="col-sm-2 col-form-label-lg">Size :</label>
            <div class="col-sm-6">
            <input type="text" class="form-control form-control-lg text-center" id="size" name="size" placeholder="Enter Size" autocomplete="off" required>
            </div>
        </div>
<br>
        <div class="row d-flex justify-content-center">
            <label for="category" class="col-sm-2 col-form-label-lg">Category :</label>
            <div class="col-sm-6">
            <input type="text" class="form-control form-control-lg text-center" id="category" name="category" placeholder="Enter Category" autocomplete="off" required>
            </div>
        </div>
<br>
        <div class="row d-flex justify-content-center">
            <label for="brand" class="col-sm-2 col-form-label-lg">Brand :</label>
            <div class="col-sm-6">
            <input type="text" class="form-control form-control-lg text-center" id="brand" name="brand" placeholder="Enter Brand" autocomplete="off" required>
            </div>
        </div>
<br>
        <div class="row d-flex justify-content-center">
            <label for="type" class="col-sm-2 col-form-label-lg">Type :</label>
            <div class="col-sm-6">
                <select name="type" class="form-select form-select-lg text-center newItem_select" id="type" aria-label="Default select example" placeholder="Select Type" autocomplete="off" required>
                    <option>Raw</option>
                    <option>Finished</option>
                </select>
            </div>
        </div>

  <p></p> <br> <br>
      <div class="d-grid gap-2 col-8 mx-auto">
        <button class="btn btn-primary fs-3" type="submit">Submit To Database</button>
      </div>

    </form>
  </div>

<%- include('footer'); -%>