<div class="container-sm clearfix mx-auto paymentForm" id="payment_to_employee">
    
  <form action="/paymentToEmployee" method="post">

    <div class="row d-flex justify-content-center">
      <label for="date1" class="col-sm-2 col-form-label col-form-label-lg">Date :</label>
      <div class="col-sm-6">
        <input type="text" class="form-control form-control-lg text-center" id="date1" name="date1" value="<%= formattedDate %>" autocomplete="off" required>
      </div>
    </div>
<br>
    <div class="row d-flex justify-content-center">
      <label for="cutomer" class="col-sm-2 col-form-label col-form-label-lg">Employee Name :</label>
      <div class="col-sm-6">
        <input type="text" class="form-control form-control-lg text-center" id="employee" name="employee" list="EmployeeList" placeholder="Enter Employee Name" autocomplete="off" required>
          <datalist id="EmployeeList">
            <% salesman_array.forEach(function(data) { %> 
              <option value= "<%= data.employee_name %>" >
            <% }); %>
          </datalist>
      </div>
    </div>
<br>
    <div class="row d-flex justify-content-center">
      <label for="payment_toe" class="col-sm-2 col-form-label col-form-label-lg">Payment Given :</label>
      <div class="col-sm-6">
        <input type="number" class="form-control form-control-lg text-center" id="amount_given" name="amount_given" placeholder="Enter Amount" autocomplete="off" required>
      </div>
    </div>
  <br>
    <div class="row d-flex justify-content-center">
      <label for="mode_of_payment" class="col-sm-2 col-form-label col-form-label-lg">Mode of Payment :</label>
      <div class="col-sm-6">
        <input type="text" class="form-control form-control-lg text-center" id="mode_of_payment" name="mode_of_payment" list="mode_of_paymentList" placeholder="Enter Mode of Payment" autocomplete="off" required>
        <datalist id="mode_of_paymentList">
           <option>UPI</option>
           <option>Cash</option>
           <option>Cheque</option>
           <option>Bank Transfer</option>
        </datalist>
      </div>
    </div>

<p></p> <br> <br>
    <div class="d-grid gap-2 col-8 mx-auto">
      <button class="btn btn-primary fs-3" type="submit">Submit To Database</button>
    </div>

  </form>
</div>


