<%- include('header'); -%>

<div class="container-fluid w-auto">
    <br><br>
    <div class="form-group float-start w-50">
        <label class="form-label" for="invoice_number">Invoice #</label>
        <input class="form-control w-25" type="text" id="invoice_number" value= <%= invoice_number %> readonly>
    </div>
    <div class="form-group float-end w-50">
        <label class="form-label" for="date">Date</label>
        <input class="form-control w-25" type="text" id="date" value= <%= date %> readonly>
    </div>
    <br>
    <div class="form-group w-75">
        <label class="form-label" for="vendorName">Vendor</label>
        <input class="form-control w-25" type="text" id="vendorName" value= "<%= vendorName %>" readonly>
    </div>

    <table id="purchaseDetailsTable" style="margin-top: 50px;" class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <th>Item</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Discount</th>
            <th>Taxable Value</th>
            <th>GST %</th>
            <th>GST Value</th>
            <th>Total</th>
        </thead>
        <tbody>
            <% purchaseDetailsTable.forEach(function(data) { %> 
            <tr>
                <td><%= data.item_name %></td>
                <td><%= data.quantity %></td>
                <td><%= data.unit_price %></td>
                <td><%= data.discount %></td>
                <td><%= data.taxable_value %></td>
                <td><%= data.gst_percentage %></td>
                <td><%= data.gst_value %></td>
                <td><%= data.total %></td>
            </tr>
            <% }); %> 
        </tbody>
    </table>

    <div style="margin-top:70px" class="col-md-6 float-end clearfix">
        <table class="table table-striped table-bordered table-hover" id="tab_logic_total">
            <tbody>
                <tr>
                    <th class="text-center">Sub Total</th>
                    <td class="text-center"><input value="<%= subTotal %>" class="form-control" readonly/></td>
                </tr>
                <tr>
                    <th class="text-center">Cash Discount</th>
                    <td class="text-center"><input value="<%= cashDiscount %>" class="form-control" readonly/></td>
                </tr>
                <tr>
                    <th class="text-center">Grand Total</th>
                    <td class="text-center"><input value="<%= grandTotal %>" class="form-control" readonly/></td>
                </tr>
            </tbody>
          </table>
      </div>
      <br>
      <div style="margin-top:270px" class="clearfix">
        <button onclick="window.location.href='/purchase'" type="btn" class="btn btn-primary float-end w-25">Go Back</button>
      </div>
</div>

<%- include('footer'); -%>