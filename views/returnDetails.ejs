<%- include('header'); -%>

<div class="container-fluid w-auto">
    <br><br>
    <div class="form-group float-start w-50">
        <label class="form-label" for="return_id">Invoice #</label>
        <input class="form-control w-25" type="text" id="return_id" value= <%= return_id %> readonly>
    </div>
    <div class="form-group float-start w-50">
        <label class="form-label" for="invoice_number">Type</label>
        <input class="form-control w-25" type="text" id="return_id" value= <%= type %> readonly>
    </div>
    <div class="form-group float-end w-50">
        <label class="form-label" for="date">Date</label>
        <input class="form-control w-25" type="text" id="date" value= <%= date %> readonly>
    </div>
    <br>
    <div class="form-group w-75">
        <label class="form-label" for="customerName">Party Name</label>
        <input class="form-control w-25" type="text" id="customerName" value= "<%= party_name %>" readonly>
    </div>

    <table id="returnDetailsTable" style="margin-top: 50px;" class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <th>Item</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total</th>
        </thead>
        <tbody>
            <% returnDetailsTable.forEach(function(data) { %> 
            <tr>
                <td><%= data.item_name %></td>
                <td><%= data.quantity %></td>
                <td><%= data.unit_price %></td>
                <td><%= data.total %></td>
            </tr>
            <% }); %> 
        </tbody>
    </table>

    <div style="margin-top:70px" class="col-md-6 float-end clearfix">
        <table class="table table-striped table-bordered table-hover" id="tab_logic_total">
            <tbody>
                <tr>
                    <th class="text-center">Grand Total</th>
                    <td class="text-center"><input value="<%= total_return_price %>" class="form-control" readonly/></td>
                </tr>
            </tbody>
          </table>
      </div>
      <br>
      <div style="margin-top:270px" class="clearfix">
        <button onclick="window.location.href='/returnTable'" type="btn" class="btn btn-primary float-end w-25">Go Back</button>
      </div>
</div>

<script type="text/javascript" src="js/returnDetails.js"></script>

<%- include('footer'); -%>